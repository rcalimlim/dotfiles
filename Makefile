#------------------------------------------------------------------------------
# Variables
#------------------------------------------------------------------------------
scripts_dir = ./scripts

#------------------------------------------------------------------------------
# Utils
#------------------------------------------------------------------------------

utils.health:
	echo "health check"

#------------------------------------------------------------------------------
# Installation
#------------------------------------------------------------------------------

# install main binaries
install.pkg:
	sh $(scripts_dir)/pkg.sh

# install lsp support
install.lsp:
	sh $(scripts_dir)/lsp.sh

# install fish shell plugins
install.fish:
	fish $(scripts_dir)/fish.fish
